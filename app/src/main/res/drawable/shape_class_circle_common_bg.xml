<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="8dp"
        android:height="8dp"
        android:gravity="top"
        android:left="15dp"
        android:top="2.5dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="4"
            android:pivotY="4"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/color_dfe3e6" />
                <size android:width="8dp" android:height="8dp"/>
            </shape>
        </rotate>
    </item>
    <item
        android:top="7dp">
        <shape android:shape="rectangle">
            <corners android:radius="10px" />
            <solid android:color="@color/color_dfe3e6" />
        </shape>
    </item>

</layer-list>