<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_course"
        android:layout_width="match_parent"
        android:layout_height="@dimen/subtitle_height"
        android:background="@color/color_white"
        app:tabIndicatorColor="@color/color_0068bd"
        app:tabIndicatorHeight="@dimen/dimen_2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/color_0068bd"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/color_666666" />

    <include layout="@layout/big_line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent" />
</LinearLayout>