<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    tools:context="com.yanxiu.gphone.faceshowadmin_android.login.activity.ClassManageActivity">

    <include layout="@layout/common_title_layout" />

    <include layout="@layout/big_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/schedule_bg" />

        <TextView
            android:id="@+id/schedule_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="21dp"
            android:gravity="center_horizontal"
            android:textColor="@color/color_333333"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/schedule_text"
            android:clipToPadding="false"
            android:paddingBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.yanxiu.gphone.faceshowadmin_android.customView.FitXYImageView
                    android:id="@+id/schedule_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
