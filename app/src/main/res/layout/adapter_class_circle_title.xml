<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_layout_height" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="156dp">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:background="@drawable/classcircle_title_bg" />

        <RelativeLayout
            android:id="@+id/rl_headimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="76dp">

            <!--<com.yanxiu.gphone.faceshow.customview.ShadowImageview-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_marginTop="40dp"-->
                <!--android:layout_height="41dp" />-->

            <ImageView
                android:id="@+id/iv_head_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:translationZ="100px"
                android:layerType="hardware"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36dp"
            android:layout_marginEnd="15dp"
            android:layout_toLeftOf="@+id/rl_headimg"
            android:textColor="#ffffff"
            android:textSize="22dp" />
    </RelativeLayout>
</LinearLayout>