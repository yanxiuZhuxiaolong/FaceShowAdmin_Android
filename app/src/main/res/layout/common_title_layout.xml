<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_layout_height"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/title_layout_left_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/commontitle_margin_left"
        android:src="@drawable/selector_back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_layout_left_txt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_layout_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/commontitle_singin_textsize"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_layout_height"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:textColor="#333333"
        android:textSize="@dimen/commontitle_title_textsize" />

    <ImageView
        android:id="@+id/title_layout_right_img"
        android:layout_width="@dimen/commontitle_title_rightIcon_width"
        android:layout_height="@dimen/commontitle_title_rightIcon_width"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/commontitle_margin_left"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_layout_signIn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_layout_height"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/title_layout_right_img"
        android:gravity="center"
        android:textColor="#1da1f2"
        android:textSize="@dimen/commontitle_singin_textsize"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_layout_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_layout_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="@drawable/selector_classmanager_title_right_text_color"
        android:textSize="@dimen/commontitle_singin_textsize"
        android:visibility="gone" />

</RelativeLayout>
