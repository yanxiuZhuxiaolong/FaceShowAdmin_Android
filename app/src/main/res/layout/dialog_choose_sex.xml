<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/gradation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_99000000" />

    <LinearLayout
        android:id="@+id/ll_anim"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_class_circle"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

            <TextView
                android:id="@+id/ll_man"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_choose_sex"
                android:gravity="center"
                android:text="男"
                android:textColor="@color/color_333333"
                android:textSize="16dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_EBEFF2" />

        <TextView
            android:id="@+id/ll_woman"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_choose_sex"
            android:gravity="center"
            android:text="女"
            android:textColor="@color/color_333333"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_dialog_cancel"
            android:gravity="center"
            android:text="确定"
            android:textColor="@drawable/selector_dialog_cancel_text_color"
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>