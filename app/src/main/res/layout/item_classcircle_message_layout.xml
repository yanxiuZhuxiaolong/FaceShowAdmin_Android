<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="82dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="82dp">

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <com.yanxiu.gphone.faceshowadmin_android.customView.EllipsizingTextView
            android:id="@+id/tv_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13sp"
            android:contentDescription="@null"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_publisher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_toStartOf="@+id/img_pic"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            tools:text="葛效萍" />

        <TextView
            android:id="@+id/tv_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_publisher_name"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:layout_toStartOf="@+id/img_pic"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            tools:text="哈哈好有意思 挺好玩的" />

        <TextView
            android:id="@+id/tv_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_message_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:layout_toStartOf="@id/img_pic"
            android:maxLines="1"
            android:textColor="@color/color_999999"
            android:textSize="12sp"
            tools:text="3分钟前" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dce0e3" />

</LinearLayout>
