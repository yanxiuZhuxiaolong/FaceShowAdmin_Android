<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/color_ffffff"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/resource_item_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/resource_item_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resource_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="14dp"
            android:textStyle="bold"
            tools:text="登录后，判断班主任管理的班级数量，如果只有一个班级，自动进入这个班级的首页；" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:text="已查看人数:  "
                android:textColor="@color/color_999999"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/resource_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:textColor="@color/color_0068bd"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:text="1/20" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_alignLeft="@+id/layout"
        android:layout_alignParentBottom="true"
        android:background="@color/color_EBEFF2" />
</RelativeLayout>
