<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/bg_check_in_detail_head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_vote_name"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:paddingEnd="25dp"
            android:paddingStart="25dp"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            tools:text="研修培训项目下午签到研修培训项目下午小学教师三十项目签到研修培训投票结果" />

        <TextView
            android:id="@+id/tv_see_detail"
            android:layout_width="80dp"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/selector_see_detail_bg"
            android:gravity="center"
            android:text="@string/see_detail"
            android:textColor="@color/selector_see_detail_color" />

        <TextView
            android:id="@+id/tv_voted_person_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_EBEFF2" />
</LinearLayout>