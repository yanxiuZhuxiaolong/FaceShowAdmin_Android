<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_edf0ee" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/color_EBEFF2" />

    <LinearLayout
        android:id="@+id/navi_switcher"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <include
            android:id="@+id/tab_main"
            layout="@layout/home_nav_bar_1_layout" />

        <include
            android:id="@+id/tab_course"
            layout="@layout/home_nav_bar_2_layout" />


        <include
            android:id="@+id/tab_task"
            layout="@layout/home_nav_bar_3_layout" />

        <include
            android:id="@+id/tab_class_circle"
            layout="@layout/home_nav_bar_4_layout" />
    </LinearLayout>

</LinearLayout>
