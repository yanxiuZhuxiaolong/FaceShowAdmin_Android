<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notice_manage_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/course_adapter_marginleft"
        android:paddingRight="@dimen/course_adapter_marginleft"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/num_reader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:textColor="@color/color_0068bd"
        android:textSize="12dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/hasread_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@id/num_reader"
        android:text="@string/has_read"
        android:textColor="@color/color_999999"
        android:textSize="12dp" />
    <TextView
        android:id="@+id/notice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/hasread_hint"
        android:text="通知标题"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_333333"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice_name"
        android:layout_marginTop="5dp"
        android:text="2017.10.07 17:13"
        android:textColor="@color/color_999999"
        android:textSize="11dp" />


    <TextView
        android:id="@+id/notice_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice_time"
        android:layout_marginTop="9dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="通知内容"
        android:textColor="@color/color_333333"
        android:textSize="13dp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="@dimen/course_adapter_marginleft"
        android:background="@color/color_EBEFF2" />
</LinearLayout>
