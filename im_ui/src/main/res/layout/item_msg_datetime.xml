<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:im="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dfe3e5"
    android:paddingTop="25dp">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dfe3e5">
        <TextView
            android:id="@+id/datetime_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#c9cdce"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <com.test.yanxiu.im_ui.view.RoundCornerMaskView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/datetime_textview"
            android:layout_alignLeft="@id/datetime_textview"
            android:layout_alignRight="@id/datetime_textview"
            android:layout_alignTop="@id/datetime_textview"
            im:corner_radius="3dp"
            im:mask_color="#dfe3e5"
            />
    </RelativeLayout>
</LinearLayout>
