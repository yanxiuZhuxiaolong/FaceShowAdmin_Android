<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.test.yanxiu.im_ui.view.ZoomImageView
        android:id="@+id/photo_preview_item_zoom_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:visibility="visible"
        android:indeterminateDrawable="@drawable/photo_preview_item_progressbar"
        android:id="@+id/photo_preview_item_progress_bar"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</FrameLayout>